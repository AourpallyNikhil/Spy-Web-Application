<% content_for :head do %>
    <meta charset="UTF-8">
<% end %>
<% provide(:title, 'Login') %>
<h1>Login</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag({controller: "user", action: "login"},name:"login" ,method: "post", class: "nifty_form") do  %>
        <%= label_tag(:username,"Username") %>
        <%= text_field_tag(:username) %>

        <%= label_tag(:password,"Password") %>
        <%= password_field_tag(:password) %>

        <input name="submit" type="submit" value="submit"/>
    <% end %>
  </div>
  <% if flash[:failure] %>
      <div class="notice"><%= flash[:failure] %>
      </div>
  <% end %>
</div>